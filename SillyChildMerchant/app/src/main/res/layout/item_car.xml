<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap"
    android:background="@color/whiteColors"
    android:orientation="vertical">


    <LinearLayout
        style="@style/MatchWrap"
        android:orientation="horizontal">


        <TextView
            style="@style/AutoWrap"
            android:layout_marginBottom="@dimen/dimen16"
            android:paddingLeft="@dimen/dimen30"
            android:paddingTop="@dimen/dimen16"
            android:text="已通过审核"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize14" />

        <TextView
            android:layout_width="@dimen/dimen70"
            android:layout_height="@dimen/dimen25"
            android:layout_marginRight="@dimen/dimen30"
            android:background="@drawable/shape_delete"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="@color/whiteColors"
            android:textSize="@dimen/textsize13" />

    </LinearLayout>


    <LinearLayout
        style="@style/MatchWrap"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen30"
        android:paddingRight="@dimen/dimen30">


        <ImageView
            android:layout_width="@dimen/dimen200"
            android:layout_height="@dimen/dimen138"
            android:layout_marginBottom="@dimen/dimen11"
            android:scaleType="fitXY"
            android:src="@mipmap/placeholderfigure" />


        <LinearLayout
            style="@style/MatchMatch"
            android:layout_marginBottom="@dimen/dimen11"
            android:layout_marginLeft="@dimen/dimen20"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                style="@style/WrapWrap"
                android:text="车品牌"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize14" />

            <TextView
                style="@style/WrapWrap"
                android:layout_marginTop="@dimen/dimen24"
                android:text="车型号"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize14" />

            <TextView
                style="@style/WrapWrap"
                android:layout_marginTop="@dimen/dimen24"
                android:text="车座数"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize14" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>